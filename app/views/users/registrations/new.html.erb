<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="checkbox-inline">
    <% User.sexes.each do |sex| %>
        <div class="checkbox">
            <%= f.label :"sex_#{sex[0]}", t("enums.user.sex.#{sex[0]}") %>
            <%= f.radio_button :sex, sex[0] %>
        </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :height, "身長", class: "form_label" %>
    <%= f.number_field :height, step: '0.1', autofocus: true, class:'form_content', placeholder: "171.2" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>（<%= @minimum_password_length %> 文字以上）</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
